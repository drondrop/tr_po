<Window x:Class="Projector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projector"
        mc:Ignorable="d"
        Title="Projector" Height="460" Width="475" Background="Gray" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="Файл">
                <MenuItem Header="Загрузить"></MenuItem>
                <MenuItem Header="Сохранить"></MenuItem>
                <MenuItem Header="Скачать"></MenuItem>
                <MenuItem Header="О программе"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Выход" Click="MenuItem_Click"></MenuItem>
            </MenuItem>
            <MenuItem Header="Изменить">
                <MenuItem Header="Вперед"></MenuItem>
                <MenuItem Header="Назад"></MenuItem>
            </MenuItem>
        </Menu>
        <Image x:Name="image" Height="244" Margin="130,10,130,0" Grid.Row="1" VerticalAlignment="Top"/>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="100" Margin="10,295,0,0" Grid.Row="1" VerticalAlignment="Top" Width="447">
            <TabItem Header="Фильтры">
                <Grid Background="#FFE5E5E5">
                    <ListView x:Name="listView" HorizontalAlignment="Center" Height="56" Margin="5,7,0,5" Width="425" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Center">
                        <ListViewItem Width="50" Height="50" Content="1">
                            <ListViewItem.Background>
                                <ImageBrush ImageSource="1.jpg"/>
                            </ListViewItem.Background>
                        </ListViewItem>
                        <ListViewItem IsSelected="True" Content="with several"/>
                        <ListViewItem Content="items"/>
                        <ListViewItem Content="items"/>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Эффекты">
                <Grid Background="#FFE5E5E5">
                    <Slider x:Name="slider1" HorizontalAlignment="Left" Margin="30,36,0,0" VerticalAlignment="Top" Width="169"/>
                    <Slider x:Name="slider2" HorizontalAlignment="Left" Margin="240,36,0,0" VerticalAlignment="Top" Width="169"/>
                    <Label x:Name="label" Content="Яркость" HorizontalAlignment="Left" Margin="86,10,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="label1" Content="Контраст" HorizontalAlignment="Left" Margin="300,10,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
        </TabControl>
        <Slider x:Name="slider" HorizontalAlignment="Left" Margin="130,268,0,0" Grid.Row="1" VerticalAlignment="Top" Width="207"/>

    </Grid>
</Window>
