<Window x:Class="Projector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projector"
        mc:Ignorable="d"
        Title="Projector" Height="460" Width="475" Background="Gray" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="Файл">
                <MenuItem Header="Загрузить"></MenuItem>
                <MenuItem Header="Сохранить"></MenuItem>
                <MenuItem Header="Скачать"></MenuItem>
                <MenuItem Header="О программе"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Выход" Click="MenuItem_Click"></MenuItem>
            </MenuItem>
            <MenuItem Header="Изменить">
                <MenuItem Header="Вперед"></MenuItem>
                <MenuItem Header="Назад"></MenuItem>
            </MenuItem>
        </Menu>
        <Image x:Name="image" Height="244" Margin="130,10,130,0" Grid.Row="1" VerticalAlignment="Top"/>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="100" Margin="10,295,0,0" Grid.Row="1" VerticalAlignment="Top" Width="447">
            <TabItem Header="Фильтры">
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="button" Content="Original" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="52" Height="48" Click="button_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="1.jpg"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="button1" Content="X-Pro II" HorizontalAlignment="Left" Margin="84,10,0,0" VerticalAlignment="Top" Width="52" Height="48" Click="button1_Click_1">
                        <Button.Background>
                            <ImageBrush ImageSource="2.jpg"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="button2" Content="Lomo-fi" HorizontalAlignment="Left" Margin="157,10,0,0" VerticalAlignment="Top" Width="52" Height="48" Click="button2_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="3.jpg"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="button3" Content="Earlybird" HorizontalAlignment="Left" Margin="229,10,0,0" VerticalAlignment="Top" Width="52" Height="48" Click="button3_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="4.jpg"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="button4" Content="Sutro" HorizontalAlignment="Left" Margin="301,10,0,0" VerticalAlignment="Top" Width="52" Height="48" Click="button4_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="5.jpg"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="button5" Content="Lily" HorizontalAlignment="Left" Margin="375,10,0,0" VerticalAlignment="Top" Width="52" Height="48" Click="button5_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="6.jpg"/>
                        </Button.Background>
                    </Button>
                </Grid>
            </TabItem>
            <TabItem Header="Эффекты">
                <Grid Background="#FFE5E5E5">
                    <Slider x:Name="slider1" HorizontalAlignment="Left" Margin="30,36,0,0" VerticalAlignment="Top" Width="169"/>
                    <Slider x:Name="slider2" HorizontalAlignment="Left" Margin="240,36,0,0" VerticalAlignment="Top" Width="169"/>
                    <Label x:Name="label" Content="Яркость" HorizontalAlignment="Left" Margin="86,10,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="label1" Content="Контраст" HorizontalAlignment="Left" Margin="300,10,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
        </TabControl>
        <Slider x:Name="slider" HorizontalAlignment="Left" Margin="130,268,0,0" Grid.Row="1" VerticalAlignment="Top" Width="207" Visibility="Hidden"/>

    </Grid>
</Window>
